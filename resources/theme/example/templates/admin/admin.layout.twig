<!DOCTYPE html>
<html>
    {% include 'globals/header.twig' %}
    <body>
      <div id="wrapper-admin" class="toggled">

        <!-- Sidebar -->
        <div id="sidebar-wrapper-admin">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="{{path_for('admin-home')}}">
                        Admin Home
                    </a>
                </li>
                {% include 'admin/admin.nav.twig' %}
            </ul>
        </div>
        <!-- /#sidebar-wrapper-admin -->

        <!-- Page Content -->
        <div id="page-content-wrapper-admin">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper-admin -->

    </div>
      <!-- Javascripts -->
      <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript"></script>
      <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
      <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.10/js/material.min.js"></script>
      <script src="https://cdn.quilljs.com/1.2.6/quill.min.js"></script>
      <script src="//cdnjs.cloudflare.com/ajax/libs/snackbarjs/1.1.0/snackbar.min.js"></script>

      {% for js in js_files %}
      <script src="{{ js }}" type="text/javascript"></script>
      {% endfor %}
   </body>
</html>
